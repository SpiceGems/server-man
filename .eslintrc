{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-undef": "error",
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 0,
    "computed-property-spacing": [2, "always"],
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 3],
    "max-statements": [1, 30],
    "new-cap": 0,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [2, "nofunc"],
    "object-curly-spacing": [2, "always"],
    "semi": [2, "always"],
    "space-unary-ops": 2
  }
}
